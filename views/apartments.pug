extends layout

block content
  - let results = [
    { apartment_type: 'Studio', location: 'Downtown', rent: 1000 },
    { apartment_type: '1-Bedroom', location: 'Suburb', rent: 1200 },
    { apartment_type: '2-Bedroom', location: 'City Center', rent: 1500 }
  ]

  div.container-fluid
    div.row
      div.col-12
        h1= title

      each result, index in results
        div.col-sm-4
          .result-item(onclick=`buy(${index})`)
            p= `Type: ${result.apartment_type}`
            p= `Location: ${result.location}`
            p= `Rent: $${result.rent}`

  script.
    function buy(index) {
      alert(`You purchased Item ${index + 1}`);
    }
