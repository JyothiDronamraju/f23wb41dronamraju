extends layout

block content
  h1= title
  p Welcome to My Express App
  button(type="button", class="btn btn-secondary", onclick="goFaster()") Press Me
  div#faster Increase the speed

  script(type="text/javascript").
    var mph = 20;
    var change = 1;

    function goFaster() {
      mph += change;
      change += 1;
      document.getElementById('faster').textContent = `MPH ${mph} with change ${change}`;
    }

  div
    a(href="/apartment") View Apartments

  div
    a(href="/board/gridbuild?rows=5&cols=4") View Board


